<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyAppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_input"
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:ellipsize="start"
        android:gravity="center|end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="53sp" />

    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:ellipsize="end"
        android:gravity="center|end"
        android:singleLine="true"
        android:text=""
        android:textColor="#6E6E6E"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_history"
                style="@style/MenuButton"
                android:text="hist">
            </TextView>

            <TextView
                android:id="@+id/btn_weather"
                style="@style/EmptyButton"
                android:text="+9 с"
                android:textSize="14sp">
            </TextView>

            <TextView
                style="@style/EmptyButton"
                android:text="">
            </TextView>

            <TextView
                android:id="@+id/btn_delete"
                style="@style/MenuButton"
                android:text="del">
            </TextView>

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutButtons">

            <Button
                android:id="@+id/btn_clear"
                android:text="C"
                style="@style/ActionButton"
                android:textColor="#E44545">
            </Button>

            <Button
                android:id="@+id/btn_open_bracket"
                android:text="("
                style="@style/ActionButton">
            </Button>

            <Button
                android:id="@+id/btn_close_bracket"
                android:text=")"
                style="@style/ActionButton">
            </Button>

            <Button
                android:id="@+id/btn_divide"
                android:text="/"
                style="@style/ActionButton">
            </Button>

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutButtons">

            <Button
                android:id="@+id/btn_7"
                android:text="7"
                style="@style/NumberButton">
            </Button>

            <Button
                android:id="@+id/btn_8"
                android:text="8"
                style="@style/NumberButton">
            </Button>

            <Button
                android:id="@+id/btn_9"
                android:text="9"
                style="@style/NumberButton">
            </Button>

            <Button
                android:id="@+id/btn_multiply"
                android:text="*"
                style="@style/ActionButton">
            </Button>

        </LinearLayout>
        <LinearLayout
            style="@style/LinearLayoutButtons">

            <Button
                android:id="@+id/btn_4"
                android:text="4"
                style="@style/NumberButton">
            </Button>

            <Button
                android:id="@+id/btn_5"
                android:text="5"
                style="@style/NumberButton">
            </Button>

            <Button
                android:id="@+id/btn_6"
                android:text="6"
                style="@style/NumberButton">
            </Button>

            <Button
                android:id="@+id/btn_minus"
                android:text="-"
                style="@style/ActionButton">
            </Button>

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutButtons">

            <Button
                android:id="@+id/btn_1"
                android:text="1"
                style="@style/NumberButton">
            </Button>

            <Button
                android:id="@+id/btn_2"
                android:text="2"
                style="@style/NumberButton">
            </Button>

            <Button
                android:id="@+id/btn_3"
                android:text="3"
                style="@style/NumberButton">
            </Button>

            <Button
                android:id="@+id/btn_plus"
                android:text="+"
                style="@style/ActionButton">
            </Button>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutButtons">

            <Button
                android:id="@+id/btn_plus_minus"
                android:text="+/-"
                style="@style/NumberButton">
            </Button>

            <Button
                android:id="@+id/btn_0"
                android:text="0"
                style="@style/NumberButton">
            </Button>

            <Button
                android:id="@+id/btn_dot"
                android:text="."
                style="@style/NumberButton">
            </Button>

            <Button
                android:id="@+id/btn_equal"
                android:text="="
                style="@style/ActionButton">
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>